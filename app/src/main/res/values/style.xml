<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!--  小标题文本样式  -->
    <style name="SubTitleStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/app_base_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <!--  数据内容样式  -->
    <style name="SubDataStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:background">@color/alpha_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <!--  数字按钮样式  -->
    <style name="calculateBtnStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_btn_click</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="calculateHorBtnStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_btn_click</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="calculateVerBtnStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_btn_click</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="modifyTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="commitBtnStyle">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_round_rect_pink</item>
    </style>
</resources>