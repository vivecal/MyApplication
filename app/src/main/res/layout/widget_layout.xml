<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widgetRl"
    android:layout_marginVertical="25dp"
    android:minWidth="@dimen/widget_min_width"
    android:minHeight="@dimen/widget_min_height"
    android:background="@drawable/bg_app_widget"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widgetTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clFFCC7F"
        android:textSize="@dimen/widget_text_size"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        tools:text="距离某某某已经"/>

    <TextView
        android:id="@+id/widgetTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/clFFCC7F"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        tools:text="365天12小时37分钟44秒"/>
</RelativeLayout>