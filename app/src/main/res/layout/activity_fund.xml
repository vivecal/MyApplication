<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FundActivity">

    <include
        layout="@layout/title_bar_layout"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="计算需要卖出的份数"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:textColor="@color/normal_text_color"
        android:background="@color/grey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/etRise"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingHorizontal="10dp"
                android:textSize="15sp"
                android:hint="涨幅"
                android:textColorHint="@color/red"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_rect_pop_item"/>
            <EditText
                android:id="@+id/etHoldRise"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:hint="持有金额"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_rect_pop_item"/>
            <EditText
                android:id="@+id/etFundPriceRise"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:hint="本基净值"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_rect_pop_item"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvRiseResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:hint="将在此处显示计算的结果..."
                />
            <Button
                android:id="@+id/btnCalRise"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:paddingHorizontal="15dp"
                android:text="计算卖出"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_pink"
                android:layout_gravity="bottom"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="计算需要加仓的金额"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        android:textColor="@color/normal_text_color"
        android:background="@color/grey"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/etDown"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingHorizontal="10dp"
                android:textSize="15sp"
                android:hint="跌幅"
                android:textColorHint="@color/green"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_rect_pop_item"/>
            <EditText
                android:id="@+id/etHoldDown"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:hint="持有金额"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_rect_pop_item"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvDownResult"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="10dp"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:hint="将在此处显示计算的结果..."
                />
            <Button
                android:id="@+id/btnCalDown"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="计算买入"
                android:paddingHorizontal="15dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_circle_pink"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>