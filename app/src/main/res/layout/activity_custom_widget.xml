<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomWidgetActivity">

    <include
        layout="@layout/title_bar_layout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="设定日期"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDefaultDate"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="2020年7月4日 14:00"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    />
                <Button
                    android:id="@+id/btnSetDate"
                    android:text="设置"
                    android:layout_marginEnd="10dp"
                    style="@style/commitBtnStyle"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="样式预览"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <include
                layout="@layout/widget_layout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="文字颜色"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivTextColorYellow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/bg_circle_yellow"/>
                <ImageView
                    android:id="@+id/ivTextColorOrange"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/bg_circle_orange"/>
                <ImageView
                    android:id="@+id/ivTextColorPink"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/bg_circle_pink"/>
                <ImageView
                    android:id="@+id/ivTextColorBlue"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/bg_circle_blue"/>
                <EditText
                    android:id="@+id/etTextColor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/normal_text_color"
                    android:hint="自定颜色如:#FFFFFF"/>
                <Button
                    android:id="@+id/btnPreviewTvColor"
                    android:text="预览"
                    style="@style/commitBtnStyle"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="文字大小"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ivTextSizeSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/normal_text_color"
                    android:text="小"
                    android:layout_marginHorizontal="5dp"
                    android:textSize="14sp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/ivTextSizeMiddle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/normal_text_color"
                    android:text="中"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/ivTextSizeLarge"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/normal_text_color"
                    android:text="大"
                    android:textSize="25sp"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center"/>
                <EditText
                    android:id="@+id/etTextSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="end|center_vertical"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/normal_text_color"
                    android:hint="文字大小：16"/>
                <Button
                    android:id="@+id/btnPreviewTvSize"
                    android:text="预览"
                    style="@style/commitBtnStyle"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="文本内容"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etShowingText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="start|center_vertical"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:hint="请输入自定义文本"/>
                <Button
                    android:id="@+id/btnPreviewText"
                    android:text="预览"
                    style="@style/commitBtnStyle"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="背景设置"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/normal_text_color"
                android:background="@color/grey"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivWidgetBgDefault"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="3dp"
                    android:padding="2dp"
                    android:src="@drawable/bg_app_widget"/>
                <ImageView
                    android:id="@+id/ivWidgetBgYellow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="2dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/bg_app_widget_yellow"/>
                <ImageView
                    android:id="@+id/ivWidgetBgBlue"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="2dp"
                    android:layout_marginHorizontal="3dp"
                    android:src="@drawable/bg_app_widget_blue"/>
                <TextView
                    android:id="@+id/tvWidgetBgSelect"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:padding="2dp"
                    android:textSize="13sp"
                    android:text="自定义"
                    android:gravity="center"
                    android:layout_marginHorizontal="3dp"
                    android:background="@drawable/bg_round_rect_grey"
                    android:drawableEnd="@drawable/ic_round_image"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>